<Button x:Class="Simple.CommonControl.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simple.CommonControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="root">
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Image Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Source="{Binding ElementName=root, Path=Source}" />
        </ControlTemplate>
    </Button.Template>
</Button>
