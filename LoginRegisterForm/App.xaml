<Application x:Class="LoginRegisterForm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoginRegisterForm"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate x:Key="validationTemplate" >
            <DockPanel>
                <Label Foreground="Red" DockPanel.Dock="Bottom" Content="{Binding ElementName=adornedElement, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"/>
                <AdornedElementPlaceholder Name="adornedElement" />
            </DockPanel>
        </ControlTemplate>

    </Application.Resources>
</Application>
