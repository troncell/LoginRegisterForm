<UserControl x:Class="LoginRegisterForm.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginRegisterForm"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300" >
    <Canvas>
        <Label Canvas.Left="10" Canvas.Top="32">用户名:</Label>
        <TextBox x:Name="userNameBox" Height="20" Width="251" Canvas.Left="10" Canvas.Top="62"></TextBox>
        <Label Canvas.Left="10" Canvas.Top="82">密码:</Label>
        <PasswordBox x:Name="passwordBox" Height="21" Width="251" Canvas.Left="10" Canvas.Top="107"></PasswordBox>
        <Label Canvas.Left="10" Canvas.Top="128">密码确认:</Label>
        <PasswordBox x:Name="passwordConfirmBox" Height="21" Width="251" Canvas.Left="10" Canvas.Top="153"></PasswordBox>
        <Button Canvas.Left="187" Canvas.Top="188">重置</Button>
        <Button Canvas.Left="233" Canvas.Top="188">注册</Button>
    </Canvas>
</UserControl>
