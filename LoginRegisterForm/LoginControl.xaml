<UserControl x:Class="LoginRegisterForm.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginRegisterForm"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
        <Label Canvas.Left="1" Canvas.Top="47">用户名:</Label>
        <TextBox x:Name="userNameBox" Width="235" Canvas.Left="55" Canvas.Top="42" Height="30" 
                 Text="{Binding UserName, ValidatesOnNotifyDataErrors=True}"
                 Validation.ErrorTemplate="{StaticResource validationTemplate}"/>
        <Label Canvas.Left="10" Canvas.Top="112">密码:</Label>
        <PasswordBox x:Name="passwordBox" Height="26" Width="235" Canvas.Left="55" Canvas.Top="111"  
                     Validation.ErrorTemplate="{StaticResource validationTemplate}" 
                     local:PasswordHelper.Password="{Binding Password, Mode=TwoWay}" 
                     local:PasswordHelper.Attach="True" />
        <Button Canvas.Left="167" Canvas.Top="159" x:Name="resetBtn" Click="resetBtn_Click">重置</Button>
        <Button Canvas.Left="262" Canvas.Top="159" x:Name="loginBtn" Click="loginBtn_Click">登陆</Button>
    </Canvas>
</UserControl>
